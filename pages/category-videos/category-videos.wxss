.container {
  min-height: 100vh;
  background: #f5f6f7;
  display: flex;
  flex-direction: column;
}

.category-header {
  background: #fff;
  padding: 24rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.category-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
}

.sort-bar {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 20rpx 32rpx;
  margin-top: 2rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.sort-item {
  padding: 12rpx 24rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 20rpx;
  transition: all 0.3s;
}

.sort-item.active {
  background: #fff0f5;
  color: #fb7299;
  font-weight: 600;
}

.video-list {
  flex: 1;
  height: 0;
}

.video-grid {
  padding: 20rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.video-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.06);
}

.thumb-wrap {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 56.25%;
  overflow: hidden;
}

.cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #eee;
}

.cover-mask {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.8));
  color: #fff;
  padding: 20rpx 12rpx 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.stats-left {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.stat-icon {
  font-size: 20rpx;
  opacity: 0.9;
}

.stat-text {
  font-size: 20rpx;
  opacity: 0.9;
}

.duration {
  background: rgba(0,0,0,0.6);
  color: #fff;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  font-weight: 500;
  font-family: 'Courier New', monospace;
  min-width: 60rpx;
  text-align: center;
}

.title {
  padding: 12rpx 16rpx;
  font-size: 26rpx;
  color: #222;
  min-height: 72rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.meta {
  padding: 0 16rpx 16rpx;
  color: #999;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.up-name {
  color: #666;
  font-weight: 500;
}

.upload-time {
  color: #999;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.load-status {
  padding: 40rpx 0;
  text-align: center;
}

.loading,
.no-more,
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.loading-text,
.no-more-text {
  font-size: 28rpx;
  color: #999;
}

.empty {
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

