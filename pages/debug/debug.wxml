<view class="container">
  <view class="header">
    <text class="title">API调试页面</text>
  </view>
  
  <view class="button-group">
    <button class="btn" bindtap="testBasicConnection">测试基本连接</button>
    <button class="btn" bindtap="testEndpoints">测试 /api/endpoints</button>
    <button class="btn" bindtap="testVideoInfo">测试视频信息</button>
    <button class="btn" bindtap="testPlayUrl">测试播放接口</button>
    <button class="btn" bindtap="testDanmuList">测试弹幕列表</button>
    <button class="btn" bindtap="testUserInfo">测试用户信息</button>
    <button class="btn" bindtap="testWebSocket">测试WebSocket</button>
    <button class="btn" bindtap="clearLogs">清空日志</button>
    <button class="btn" bindtap="copyLogs">复制日志</button>
  </view>
  
  <view class="logs">
    <view class="log-title">调试日志：</view>
    <scroll-view class="log-content" scroll-y="true">
      <text wx:for="{{logs}}" wx:key="*this" class="log-item">{{item}}</text>
    </scroll-view>
  </view>
  
  <view class="results">
    <view class="result-title">测试结果：</view>
    <view class="result-content">
      <text>{{testResults}}</text>
    </view>
  </view>
</view>
