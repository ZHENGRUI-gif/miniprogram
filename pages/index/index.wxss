.page { 
  background: #f5f6f7; 
  height: 100vh;
  box-sizing: border-box;
  /* 性能优化：启用硬件加速 */
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  /* 优化滚动性能 */
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
}
.topbar { display: flex; align-items: center; padding: 16rpx 20rpx; }
.avatar { width: 56rpx; height: 56rpx; border-radius: 50%; background: #eee; display:flex;align-items:center;justify-content:center; margin-right: 16rpx; }
.avatar-img { width: 100%; height: 100%; border-radius: 50%; }
.avatar-emoji { font-size: 28rpx; }
.search { flex: 1; display: flex; align-items: center; background: #fff; border-radius: 100rpx; padding: 12rpx 20rpx; box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04); color: #888; }
.search .icon { margin-right: 8rpx; }
.inbox { margin-left: 16rpx; }

.tabs { white-space: nowrap; padding: 8rpx 12rpx; }
.tab { display: inline-block; padding: 12rpx 20rpx; margin: 0 8rpx; color: #666; }
.tab.active { color: #fb7299; border-bottom: 4rpx solid #fb7299; }

.banner { height: 360rpx; margin: 8rpx 20rpx; border-radius: 16rpx; overflow: hidden; }
.banner-img { width: 100%; height: 100%; }
.banner-title { position: absolute; left: 20rpx; bottom: 20rpx; color: #fff; text-shadow: 0 2rpx 6rpx rgba(0,0,0,0.4); }

/* 视频容器 */
.video-container {
  padding: 16rpx 20rpx 120rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  /* 性能优化：启用硬件加速 */
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  /* 优化渲染性能 */
  will-change: scroll-position;
}

/* 大视频区域 */
.large-video-section {
  grid-column: 1 / -1; /* 占据整行 */
  margin-bottom: 20rpx;
}

.large-video-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.06);
}

.large-video-wrapper {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 56.25%; /* 16:9 比例，和轮播图一样大 */
  overflow: hidden;
}

.large-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  /* 性能优化：启用硬件加速 */
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
  /* 优化视频渲染 */
  will-change: transform;
  /* 减少重绘和回流 */
  contain: layout style paint;
  /* 优化合成层 */
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

.large-video-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.8));
  color: #fff;
  padding: 30rpx 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  pointer-events: none;
}

.large-stats {
  display: flex;
  gap: 20rpx;
}

.large-stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.large-stat-icon {
  font-size: 24rpx;
  opacity: 0.9;
}

.large-stat-text {
  font-size: 24rpx;
  opacity: 0.9;
}

.large-duration {
  background: rgba(0,0,0,0.6);
  color: #fff;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  font-weight: 500;
  font-family: 'Courier New', 'Monaco', 'Menlo', monospace;
  min-width: 80rpx;
  text-align: center;
  letter-spacing: 1rpx;
}

/* 大视频遮罩 */
.large-video-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  cursor: pointer;
}

/* 大视频错误提示 */
.video-error-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 5;
}

.video-error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  color: #fff;
  text-align: center;
}

.video-error-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.video-error-text {
  font-size: 24rpx;
  font-weight: 600;
}

.video-error-tip {
  font-size: 20rpx;
  color: #ccc;
}

/* 大视频信息区域 */
.large-video-info {
  padding: 20rpx;
}

.large-title {
  font-size: 32rpx;
  color: #222;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.large-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #999;
}

.large-up-name {
  color: #666;
  font-weight: 500;
}

.large-upload-time {
  color: #999;
}

.large-likes {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.like-icon {
  font-size: 20rpx;
}

.like-count {
  font-size: 24rpx;
}

/* 小视频网格布局 */
.card {
  /* Grid会自动处理布局，无需额外样式 */
}

/* 响应式布局 */
@media (min-width: 750rpx) {
  .video-container {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (min-width: 1000rpx) {
  .video-container {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* 视频预览模态框 */
.video-preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.9);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-content {
  width: 90%;
  max-width: 800rpx;
  background: #000;
  border-radius: 16rpx;
  overflow: hidden;
}

.preview-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
}

.preview-title {
  font-size: 28rpx;
  flex: 1;
  margin-right: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.close-btn {
  font-size: 40rpx;
  color: #fff;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
}

.preview-video {
  width: 100%;
  height: 400rpx;
  background: #000;
}

.preview-info {
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.8);
  color: #fff;
}

.preview-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.preview-up-name {
  color: #fb7299;
  font-weight: 500;
}

.preview-upload-time {
  color: #999;
}

.preview-stats {
  display: flex;
  gap: 20rpx;
}

.preview-stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #ccc;
}

.preview-stat-icon {
  font-size: 20rpx;
}

.preview-stat-text {
  font-size: 24rpx;
}

/* 加载更多状态 */
.load-more-section {
  grid-column: 1 / -1; /* 占据整行 */
  padding: 40rpx 0;
  text-align: center;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

.load-more-tip {
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-text {
  font-size: 26rpx;
  color: #fb7299;
}

/* 回到顶部按钮 */
.back-to-top {
  position: fixed;
  bottom: 120rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: all 0.3s ease;
}

.back-to-top:active {
  background: rgba(0, 0, 0, 0.8);
  transform: scale(0.95);
}

.back-to-top-icon {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}
