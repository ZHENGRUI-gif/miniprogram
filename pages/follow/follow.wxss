.container { padding: 24rpx; }
.grid { display: grid; grid-template-columns: 1fr 1fr; grid-gap: 20rpx; }
.item { background: #fff; border-radius: 16rpx; overflow: hidden; box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.06); }
.cover { width: 100%; height: 320rpx; background: #eee; }
.title { padding: 12rpx 16rpx; font-size: 26rpx; color: #222; min-height: 72rpx; }
.meta { padding: 0 16rpx 16rpx; color: #999; font-size: 22rpx; }
.empty { text-align: center; color: #888; margin-top: 120rpx; }
