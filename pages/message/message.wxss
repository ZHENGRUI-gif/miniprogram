/* 消息页面样式 */
.message-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}



/* 消息列表 */
.message-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.message-item {
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.message-item:last-child {
  border-bottom: none;
}

.message-item:active {
  background-color: #f8f9fa;
}

.item-content {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  gap: 20rpx;
}

.item-icon {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
  border-radius: 50%;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
}

.item-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.unread-badge {
  background-color: #ff4757;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  min-width: 32rpx;
  text-align: center;
  font-weight: bold;
}

.arrow {
  color: #999;
  font-size: 28rpx;
  font-weight: bold;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}
