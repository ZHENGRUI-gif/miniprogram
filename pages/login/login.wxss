.wrap { padding: 80rpx 40rpx; }
.form { padding: 40rpx; }
.title { font-size: 36rpx; color: #222; font-weight: 600; margin-bottom: 24rpx; }
.input { margin: 16rpx 0; }

/* 增强登录按钮样式 */
.btn-primary { 
  margin-top: 32rpx; 
  background: linear-gradient(135deg, #fb7299, #ff6b9d);
  color: #fff; 
  border-radius: 28rpx; 
  padding: 28rpx 40rpx; 
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(251, 114, 153, 0.3);
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(251, 114, 153, 0.4);
}

.btn-primary:active::before {
  left: 100%;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

