.container { background: #fff; min-height: 100vh; }
.quick { display: grid; grid-template-columns: repeat(3, 1fr); padding: 20rpx; gap: 16rpx; }
.q-item { background: #f7f8fa; border-radius: 16rpx; padding: 24rpx 0; text-align: center; color: #333; }
.q-icon { display: block; font-size: 40rpx; margin-bottom: 8rpx; }
.q-text { font-size: 24rpx; }

.list { padding: 0 20rpx; }
.row { display: flex; align-items: center; padding: 20rpx 0; border-bottom: 1rpx solid #f0f0f0; }
.avatar { width: 80rpx; height: 80rpx; border-radius: 50%; background: #eee; margin-right: 16rpx; display:flex;align-items:center;justify-content:center; }
.avatar.placeholder { font-size: 32rpx; }
.content { flex: 1; }
.title { font-size: 28rpx; color: #222; }
.desc { font-size: 24rpx; color: #999; margin-top: 6rpx; }
.time { font-size: 22rpx; color: #999; margin-left: 12rpx; }
.text-ellipsis { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }


