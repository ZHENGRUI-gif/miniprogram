.container {
  min-height: 100vh;
  background: #f5f6f7;
  padding-bottom: 40rpx;
}

.header {
  background: #fff;
  padding: 20rpx 32rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.section {
  margin-top: 20rpx;
  background: #fff;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
}

.edit-btn {
  font-size: 28rpx;
  color: #fb7299;
  padding: 8rpx 20rpx;
  background: #fff0f5;
  border-radius: 20rpx;
}

.quick-access {
  min-height: 200rpx;
  padding: 0 32rpx 32rpx;
}

.empty-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  background: #fafafa;
  border-radius: 16rpx;
  border: 2rpx dashed #ddd;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx;
  padding: 0 0 32rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  background: #fff;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.category-item:active {
  background: #f5f5f5;
  transform: scale(0.95);
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  word-break: break-all;
}

