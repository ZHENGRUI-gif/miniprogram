.container { padding: 24rpx; }
.header { display: flex; align-items: center; padding: 24rpx; position: relative; }
.user-info-area { display: flex; align-items: center; flex: 1; cursor: pointer; }
.avatar { width: 120rpx; height: 120rpx; border-radius: 50%; background: #eee; }
.avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
}
.placeholder-icon {
  font-size: 60rpx;
  color: #999;
}
.info { margin-left: 20rpx; flex: 1; }
.name { font-size: 32rpx; font-weight: 600; color: #222; }
.desc { color: #888; font-size: 24rpx; max-width: 480rpx; }
.btn-primary { margin-top: 24rpx; }

/* 未登录状态增强样式 */
.unlogged-section {
  margin-top: 32rpx;
}

.unlogged-card {
  background: linear-gradient(135deg, #fff, #f8f9fa);
  border-radius: 24rpx;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
}

.unlogged-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.unlogged-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 16rpx;
}

.unlogged-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.unlogged-features {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.feature-icon {
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.unlogged-btn {
  background: linear-gradient(135deg, #fb7299, #ff6b9d);
  color: #fff;
  border-radius: 28rpx;
  padding: 28rpx 40rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(251, 114, 153, 0.3);
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.unlogged-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.unlogged-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(251, 114, 153, 0.4);
}

.unlogged-btn:active::before {
  left: 100%;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 切换账号按钮样式 */
.switch-account-btn {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: #f5f6f7;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #666;
}

.switch-icon {
  font-size: 28rpx;
}

.switch-text {
  font-size: 30rpx;
}

/* 切换账号弹窗样式 */
.switch-account-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 16rpx;
  width: 80%;
  max-height: 80%;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.account-list {
  padding: 0 24rpx 24rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

/* 当前账号样式 */
.current-account {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.current-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: #fb7299;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 其他账号样式 */
.other-accounts {
  margin-bottom: 16rpx;
}

.account-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  background: #fff;
  border: 1rpx solid #eee;
}

.account-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.account-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.account-name {
  font-size: 28rpx;
  color: #222;
  font-weight: 500;
}

.account-desc {
  font-size: 24rpx;
  color: #666;
}

.switch-btn {
  background: #fb7299;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

/* 添加新账号样式 */
.add-account {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  color: #666;
}

.add-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.add-text {
  font-size: 28rpx;
}

