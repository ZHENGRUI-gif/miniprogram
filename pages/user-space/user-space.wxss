.container { 
  background: #f5f6f7; 
  min-height: 100vh; 
  padding-top: 0; /* 去除上方空白区域 */
}

/* 固定聊天按钮 */
.chat-btn {
  position: fixed;
  top: 20rpx; /* 调整到页面顶部 */
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: #fb7299;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(251, 114, 153, 0.3);
  z-index: 100;
}

/* 用户信息区域 */
.profile-section {
  background: #fff;
  padding: 20rpx 20rpx 30rpx 20rpx; /* 减少上边距 */
  margin-bottom: 20rpx;
}

.user-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #ccc;
}

.level-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  background: #fb7299;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  border: 2rpx solid #fff;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
}

.auth-badge {
  background: #00aeec;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.vip-badge {
  background: linear-gradient(45deg, #ff6b6b, #ffa500);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.location {
  font-size: 24rpx;
  color: #999;
}

/* 统计数据行 */
.stats-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-top: 1rpx solid #f0f0f0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 关注按钮 */
.follow-btn {
  background: #fb7299;
  color: #fff;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.follow-btn.followed {
  background: #e5e9ef;
  color: #666;
}

.follow-btn.followed:hover {
  background: #d0d6db;
}

.follow-text {
  color: inherit;
}

/* 导航标签 */
.nav-tabs { 
  display: flex; 
  background: #fff; 
  margin: 0 0 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab { 
  flex: 1; 
  text-align: center; 
  padding: 24rpx 0; 
  font-size: 28rpx; 
  color: #666;
  position: relative;
}

.tab.active { 
  color: #fb7299; 
  font-weight: 600;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #fb7299;
  border-radius: 2rpx;
}

/* 视频列表区域 */
.videos-section {
  background: #fff;
}

.videos-section .section-header {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.video-title {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
}

.title-count {
  background: #f6fafb;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  color: #777;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
}

.sort-tabs {
  display: flex;
  gap: 0;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 4rpx;
}

.sort-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 6rpx;
  transition: all 0.3s ease;
}

.sort-tab.active {
  background: #fb7299;
  color: #fff;
  font-weight: 600;
}

/* 视频列表 */
.video-list {
  padding: 0 20rpx;
}

.video-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.video-item:last-child {
  border-bottom: none;
}

.video-thumbnail {
  position: relative;
  width: 200rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.thumbnail {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.duration {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: 'Courier New', monospace;
}

.video-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.video-title {
  font-size: 28rpx;
  color: #222;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.video-meta {
  font-size: 24rpx;
  color: #999;
}

.upload-time {
  color: #999;
}

.video-stats {
  display: flex;
  gap: 20rpx;
}

.stat {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #666;
}

.stat-icon {
  font-size: 20rpx;
}

.stat-text {
  font-size: 24rpx;
}

.more-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 32rpx;
  margin-left: 20rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #666;
}

.load-text {
  font-size: 26rpx;
  color: #fb7299;
}

/* 没有更多数据 */
.no-more {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
}

.no-more-text {
  font-size: 24rpx;
}

/* 主页内容区域 */
.home-content {
  background: #f5f6f7;
  padding: 0;
}

/* 内容区块 */
.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
}

.section-count {
  background: #f6fafb;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  color: #777;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  margin-left: 20rpx;
}

.section-more {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 26rpx;
}

.more-text {
  margin-right: 8rpx;
}

.more-icon {
  font-size: 24rpx;
}

/* 视频网格 */
.video-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.video-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.video-cover {
  position: relative;
  width: 100%;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.cover-img {
  width: 100%;
  height: 100%;
  background: #f0f0f0;
}

.duration {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
  font-family: 'Courier New', monospace;
}

.video-title {
  font-size: 26rpx;
  color: #222;
  line-height: 1.4;
  margin: 16rpx 0 12rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.video-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.play-count {
  color: #666;
}

.upload-time {
  color: #999;
}

/* 收藏夹网格 */
.fav-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.fav-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.fav-cover {
  position: relative;
  width: 100%;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #f0f0f0;
}

.cover-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #ccc;
}

.fav-count {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}

.fav-title {
  font-size: 26rpx;
  color: #222;
  line-height: 1.4;
  margin: 16rpx 0 8rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.fav-meta {
  font-size: 22rpx;
  color: #999;
}

.fav-visibility {
  color: #666;
}

/* 点赞列表 */
.love-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.love-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.love-cover {
  position: relative;
  width: 200rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin: 20rpx;
}

.love-info {
  flex: 1;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.love-title {
  font-size: 28rpx;
  color: #222;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.love-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 12rpx;
}

.author {
  color: #666;
}

/* 收藏页面 */
.favorites-content {
  background: #f5f6f7;
  padding: 0;
}

.fav-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx;
}

.fav-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.fav-item .fav-cover {
  width: 200rpx;
  height: 140rpx;
  margin: 20rpx;
}

.fav-info {
  flex: 1;
  padding: 20rpx 20rpx 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.fav-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin: 8rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.fav-time {
  color: #999;
}

/* 空状态 */
.empty-videos, .empty-favs, .empty-love {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #999;
}

.empty-text {
  font-size: 28rpx;
}

/* 响应式调整 */
@media (min-width: 750rpx) {
  .video-thumbnail {
    width: 240rpx;
    height: 140rpx;
  }
}