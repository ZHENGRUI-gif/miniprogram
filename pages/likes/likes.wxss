.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.organize-btn {
  background-color: #fb7299;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 普通模式样式 */
.like-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.like-item {
  display: flex;
  flex-direction: column;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.like-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-avatar.placeholder {
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.like-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.video-info {
  display: flex;
  align-items: center;
}

.video-cover {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.video-details {
  flex: 1;
}

.video-title {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.video-stats {
  display: flex;
  gap: 16rpx;
}

.stat {
  font-size: 22rpx;
  color: #999;
}

/* 整理模式样式 */
.grouped-list {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.group-item {
  border-bottom: 1rpx solid #f0f0f0;
}

.group-item:last-child {
  border-bottom: none;
}

.group-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  cursor: pointer;
}

.video-summary {
  display: flex;
  align-items: center;
  flex: 1;
}

.group-cover {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.group-info {
  flex: 1;
}

.group-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.group-stats {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.likes-detail {
  background-color: #f8f8f8;
  padding: 0 24rpx 24rpx;
}

.like-user {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.like-user:last-child {
  border-bottom: none;
}

.like-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}

.like-avatar.placeholder {
  background-color: #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #999;
}

.like-user-info {
  flex: 1;
}

.like-user-name {
  font-size: 26rpx;
  color: #333;
}

.like-user-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 2rpx;
}

/* 加载和空状态样式 */
.loading, .no-more, .empty {
  text-align: center;
  padding: 40rpx;
}

.loading-text, .no-more-text, .empty-text {
  font-size: 26rpx;
  color: #999;
}

/* 通用样式 */
.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
