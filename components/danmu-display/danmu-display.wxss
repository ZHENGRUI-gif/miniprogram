.danmu-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
  z-index: 5;
}

.danmu-item {
  position: absolute;
  white-space: nowrap;
  font-weight: 500;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.8);
  pointer-events: none;
  user-select: none;
}

/* 滚动弹幕 */
.danmu-mode-1 {
  left: 100%;
  animation: danmu-roll linear forwards;
}

@keyframes danmu-roll {
  from {
    transform: translateX(0);
  }
  to {
    transform: translateX(-200vw);
  }
}

/* 顶部弹幕 */
.danmu-mode-2 {
  left: 50%;
  transform: translateX(-50%);
  animation: danmu-fade-in-out ease-in-out forwards;
}

/* 底部弹幕 */
.danmu-mode-3 {
  left: 50%;
  transform: translateX(-50%);
  animation: danmu-fade-in-out ease-in-out forwards;
}

@keyframes danmu-fade-in-out {
  0% {
    opacity: 0;
    transform: translateX(-50%) scale(0.8);
  }
  20% {
    opacity: 1;
    transform: translateX(-50%) scale(1);
  }
  80% {
    opacity: 1;
    transform: translateX(-50%) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateX(-50%) scale(0.8);
  }
}

/* 自己发送的弹幕特殊样式 */
.danmu-item.own-danmu {
  border: 2rpx solid #ffffff;
  border-radius: 8rpx;
  padding: 4rpx 8rpx;
  background: rgba(0, 0, 0, 0.3);
}
