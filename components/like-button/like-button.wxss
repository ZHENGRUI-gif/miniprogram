/* 引入iconfont样式 */
@import "../../styles/iconfont.wxss";

/* 点赞容器 */
.like-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
  position: relative;
}

/* 适配video页面的act样式 */
.like-container .like-button,
.like-container .dislike-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  background-color: transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  min-width: 60rpx;
}

.like-container .like-button:active,
.like-container .dislike-button:active {
  transform: scale(0.95);
}

.like-container .like-button.liked {
  background-color: rgba(251, 114, 153, 0.1);
  color: #fb7299;
}

.like-container .dislike-button.disliked {
  background-color: rgba(108, 117, 125, 0.1);
  color: #6c757d;
}

.like-container .icon-wrapper {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.like-container .iconfont {
  font-size: 40rpx;
  color: #666;
  transition: all 0.3s ease;
}

.like-container .like-button.liked .iconfont {
  color: #fb7299;
}

.like-container .dislike-button.disliked .iconfont {
  color: #6c757d;
}

.like-container .like-count,
.like-container .dislike-count {
  font-size: 20rpx;
  color: #999;
  font-weight: 400;
  transition: all 0.3s ease;
}

.like-container .like-button.liked .like-count {
  color: #fb7299;
}

.like-container .dislike-button.disliked .dislike-count {
  color: #6c757d;
}

/* GIF动画容器 */
.dianzan-gif {
  position: fixed;
  top: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 160rpx;
  z-index: 99999;
  pointer-events: none;
  opacity: 0.8;
}

.gif-image {
  width: 160rpx;
  height: 160rpx;
}

/* GIF显示动画 */
.gif-show {
  animation: appear 0.2s ease-out forwards;
  transform-origin: bottom;
}

.gif-hide {
  animation: disappear 0.2s ease-out forwards;
  transform-origin: bottom;
}

@keyframes appear {
  0% {
    opacity: 0;
    transform: translateY(5rpx) scale(0);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

@keyframes disappear {
  0% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  100% {
    opacity: 0;
    transform: translateY(5rpx) scale(0);
  }
}

/* 心跳动画 */
@keyframes heartbeat {
  0% {
    transform: scale(1);
  }
  14% {
    transform: scale(1.3);
  }
  28% {
    transform: scale(1);
  }
  42% {
    transform: scale(1.3);
  }
  70% {
    transform: scale(1);
  }
}

/* 震动动画 */
@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-2rpx);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(2rpx);
  }
}

/* 粒子爆炸效果 */
.particle-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 99998;
}

.particle {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background-color: #fb7299;
  border-radius: 50%;
  animation: particle-explode 1s ease-out forwards;
}

@keyframes particle-explode {
  0% {
    opacity: 1;
    transform: scale(1) translate(0, 0);
  }
  100% {
    opacity: 0;
    transform: scale(0) translate(var(--random-x, 0), var(--random-y, 0));
  }
}
